<div class="register-container bgcolor-000">
    <div class="container">
        <h1 class="heading-title text-center color-fff">Đăng ký</h1>
        <div class="form-register border-basic bgcolor-111">
            <form action="register-handler" method="post">
                <div id="liveAlertPlaceholder"></div>
                <div class="row">
                    <div class="col-12">
                        <label for="username" class="form-label text-heading">Tên hiển thị</label>
                    </div>
                    <div class="col-12 mb-4">
                        <input type="text" class="form-control text-input" id="username" name="username" placeholder="Vui lòng nhập không dấu" required>
                    </div>
                    <div class="col-12">
                        <label for="email" class="form-label text-heading">Email</label>
                    </div>
                    <div class="col-12 mb-4">
                        <input type="email" class="form-control text-input" id="email" name="email" placeholder="VD: cinema@gmail.com,..." required>
                    </div>
                    <div class="col-12">
                        <label for="password" class="form-label text-heading">Mật khẩu</label>
                    </div>
                    <div class="col-12 mb-4">
                        <input type="password" class="form-control text-input" id="password" name="pass" required>
                    </div>
                    <div class="col-12">
                        <label for="name" class="form-label text-heading">Họ và tên</label>
                    </div>
                    <div class="col-12 mb-4">
                        <input type="text" class="form-control text-input" id="name" name="name" required>
                    </div>
                    <div class="col-12">
                        <label for="address" class="form-label">Địa chỉ</label>
                    </div>
                    <div class="col-12 mb-4">
                        <input type="text" class="form-control text-input" id="address" name="address" required>
                    </div>
                    <div class="col-12">
                        <label for="phone" class="form-label text-heading">Số điện thoại</label>
                    </div>
                    <div class="col-12 mb-4">
                        <input type="text" class="form-control text-input" id="phone" name="phone" required>
                    </div>
                    <div class="col-12">
                        <label for="date" class="form-label">Ngày sinh</label>
                        <label for="date">
                            <input type="date" class="form-control text-input-datetime" id="date" name="dob">
                        </label>
                    </div>
                </div>
                <div class="row text-center btn-submit">
                    <div class="col">
                        <button class="pd-8_16 bg-btn_a" type="submit">
                            <a class="style-btn_a">Đăng kí</a>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let error = []
    {{#if error}}
    {{#each error}}
        error.push('{{this}}')
    {{/each}}
    {{/if}}
    if (error.length > 0) {
        var alertPlaceholder = document.getElementById('liveAlertPlaceholder')

        function alert(message, type) {
            var wrapper = document.createElement('div')
            wrapper.innerHTML = '<div class="alert alert-' + type + ' alert-dismissible" role="alert">' + message + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>'

            alertPlaceholder.append(wrapper)
        }
        error.forEach(function (item) {
            alert(item, 'danger')
        })
    }
</script>
